@model IteraTestTask.ViewModels.DishesOrdersViewModel

@{
    ViewBag.Title = "Food Orders";
}
<br />
<form method="get">
    <div class="form-inline">
        <label class="control-label" style="width:100px"> Dish Name</label>
        @Html.Editor("dishName", Model.DishNameFilter)
        <br />
        <label class="control-label" style="width:100px"> Count </label>
        @Html.Editor("count", Model.CountFilter)
        <br />
        <input type="submit" value="Search" class="btn btn-default">
    </div>
</form>

    <br />
    @Html.ActionLink("Create a new order", "Create", null, new { @class = "btn btn-primary" })
    <br />
    <br />
    <table class="table-bordered">
        <tr>
            <th>
                @Html.ActionLink("Order Id  ", "Index", new { sortOrder = ViewBag.IdSort, dishName = Model.DishNameFilter, count = Model.CountFilter })
            </th>
            <th>
                @Html.ActionLink("Dish Name  ", "Index", new { sortOrder = ViewBag.DishNameSort, dishName = Model.DishNameFilter, count = Model.CountFilter })
            </th>
            <th>
                @Html.ActionLink("Count  ", "Index", new { sortOrder = ViewBag.CountSort, dishName = Model.DishNameFilter, count = Model.CountFilter })
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.FoodOrders)
        {
            <tr>
                <td> @Html.DisplayFor(m => item.Id)     </td>

                <td> @Html.DisplayFor(m => item.DishName)     </td>

                <td> @Html.DisplayFor(m => item.Count)     </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>

